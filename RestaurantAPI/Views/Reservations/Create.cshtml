@{
    ViewData["Title"] = "Reservation Form";
}

<div class="hero-banner hero-reservation">
    <div class="hero-overlay"></div>
    <div class="hero-content reservation-form-container">
        <h2>Reservation Form</h2>
        <form method="post" action="/Reservations/Create">
            <div class="form-group">
                <label>Full Name</label>
                <input type="text" name="Name" required />
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="email" name="Email" required />
            </div>
            <div class="form-group">
                <label>Contact #</label>
                <input type="text" name="Phone" />
            </div>
            <div class="form-group">
                <label>Address</label>
                <input type="text" name="Address" />
            </div>
            <div class="form-group">
                <label>Table</label>
                <select name="TableType">
                    <option value="2-person">2-Person</option>
                    <option value="4-person">4-Person</option>
                    <option value="6-person">6-Person</option>
                </select>
            </div>
            <div class="form-group">
                <label>Schedule</label>
                <input type="datetime-local" name="ReservationDate" required />
            </div>
            <button type="submit" class="btn">Submit Reservation</button>
        </form>
    </div>
</div>
