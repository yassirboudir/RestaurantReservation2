@model RestaurantAPI.Models.ViewModels.ReservationViewModel

@{
    ViewData["Title"] = "Make a Reservation at " + Model.RestaurantName;
}

<div class="make-reservation-container">
    <h2>Make a Reservation at @Model.RestaurantName</h2>

    <form method="post" asp-action="MakeReservation" asp-controller="Reservations">
        <input type="hidden" asp-for="RestaurantId" />
        
        <div class="form-group">
            <label>Name</label>
            <input asp-for="Name" type="text" readonly />
        </div>
        
        <div class="form-group">
            <label>Email</label>
            <input asp-for="Email" type="email" readonly />
        </div>
        
        <div class="form-group">
            <label>Phone</label>
            <input asp-for="Phone" type="text" readonly />
        </div>
        
        <div class="form-group">
            <label>Date & Time</label>
            <input asp-for="ReservationDate" type="datetime-local" required />
        </div>
        
        <div class="form-group">
            <label>Number of People</label>
            <input asp-for="NumberOfPeople" type="number" min="1" required />
        </div>
        
        <button type="submit" class="btn">Reserve</button>
    </form>
</div>
